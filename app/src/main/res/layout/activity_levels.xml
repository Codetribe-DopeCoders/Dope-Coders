<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:paddingTop="100dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.example.codetribe.palliate.Levels">


    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/magic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="100dp"
        app:button_icon="@drawable/green"
        app:button_icon_width="50dp"
        app:button_icon_height="50dp"
        app:hide_text="Connect With Socialworker"
        app:hide_text_size="8dp"
        app:hide_text_color="@android:color/black"
        app:icon_button_color="#3CB371"
        tools:layout_editor_absoluteY="85dp"
        tools:layout_editor_absoluteX="16dp"
        app:expandable_area_color="#3CB371" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/magic_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="100dp"
        app:button_icon="@drawable/orange"
        app:button_icon_width="50dp"
        app:button_icon_height="50dp"
        app:hide_text="SMS Family and Friends"
        app:hide_text_size="8dp"
        app:hide_text_color="@android:color/black"
        app:icon_button_color="#FF6347"
        tools:layout_editor_absoluteX="16dp"
        app:expandable_area_color="#FF6347"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/magic_button" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/magic_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="100dp"
        app:button_icon="@drawable/red"
        app:button_icon_width="50dp"
        app:button_icon_height="50dp"
        app:hide_text="Connect With CPF"
        app:hide_text_size="8dp"
        app:hide_text_color="@android:color/black"
        app:icon_button_color="#FF0000"
        tools:layout_editor_absoluteX="16dp"
        app:expandable_area_color="#FF0000"
        android:layout_marginTop="117dp"
        app:layout_constraintTop_toBottomOf="@+id/magic_button" />


</android.support.constraint.ConstraintLayout>
