<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"

    tools:context="com.example.codetribe.palliate.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="Register" />
    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_format_align_left_black_24dp"
        android:background="@drawable/edittext"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:hint="Name" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
        android:background="@drawable/edittext"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:hint="Email Address"
        android:inputType="textEmailAddress" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleContentDescription="ruuu"
            app:passwordToggleDrawable="@drawable/ic_remove_red_eye_black_24dp"
            app:passwordToggleEnabled="true"

            >

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext"
                android:maxLength="12"
                android:padding="16dp"
                android:inputType="textPassword"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:hint="Password"
                android:textColor="#000000"
                android:textSize="16dp" />

        </android.support.design.widget.TextInputLayout>

    <EditText
        android:inputType="number"
        android:id="@+id/register_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:background="@drawable/edittext"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:layout_marginTop="10dp"
        android:hint="Contact No" />


        <Button
            android:id="@+id/create_an_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height"
            android:layout_marginTop="20dp"
            android:textColor="@color/icons"
            android:background="@drawable/button3"
            android:text="Create an  Account" />
    </LinearLayout>

</ScrollView>

